#include <stdio.h> 
int main (){

    unsigned long int populacao, pontosturistico;
    char estado;
    float pib;
    float area;
    float Pibpercapita, Densidadepopulacional;
    float superPoder;
    char codigocarta[70];
    char nomecidade[70];

    //Carta 1

    printf("Digite uma letra entre A e H:");
    scanf("%c", &estado);

    getchar();

    printf("Escolha um número de 01 a 04:");
    scanf("%s", &codigocarta);

    getchar();

    printf("Escolha uma cidade:");
    scanf("%s", &nomecidade);

    getchar();

    printf("Coloque o quilômetro quadrado da cidade:");
    scanf("%f", &area);

    printf("Coloque o PIB da cidade:");
    scanf("%f", &pib);

    printf("Digite a população da cidade:");
    scanf("%d", &populacao);

    getchar();

    printf("Digite a quantidade de pontos turísticos da cidade:");
    scanf("%d", &pontosturistico);

    printf("Carta 1\n");

    printf("Estado: %c \n", estado);

    printf("Código da carta: %c%s\n", estado, codigocarta);

    printf("Nome da Cidade:%s\n", nomecidade);

    printf("População:%d\n", populacao);

    printf("Área: %fkm²\n", area);

    printf("PIB:%f Milhões\n", pib);

    printf("Pontos Turísticos: %d\n", pontosturistico);

    Densidadepopulacional = (float) (populacao / area);
    Pibpercapita = (float) (pib * 1000000) / populacao;

    printf ("Densidade Populacional: %f\n", Densidadepopulacional);

    printf ("Pib per Capita: %f\n", Pibpercapita);

    superPoder = populacao + pontosturistico + (pib * 1000000) + area + Pibpercapita +(1/Densidadepopulacional);


    //Carta 2

    unsigned long int populacao2, pontosturistico2;
    char estado2;
    float pib2;
    float area2;
    float Pibpercapita2, Densidadepopulacional2;
    float superPoder2;
    char codigocarta2[70];
    char nomecidade2[70];

    printf("Digite uma letra entre A e H:");
    scanf(" %c", &estado2);

    getchar();

    printf("Escolha um número de 01 a 04:");
    scanf("%s", &codigocarta2);

    getchar();

    printf("Escolha uma cidade:");
    scanf("%s", &nomecidade2);

    getchar();

    printf("Coloque o quilômetro quadrado da cidade:");
    scanf("%f", &area2);

    printf("Coloque o PIB da cidade:");
    scanf("%f", &pib2);

    printf("Digite a população da cidade:");
    scanf("%d", &populacao2);

    getchar();

    printf("Digite a quantidade de pontos turísticos da cidade:");
    scanf("%d", &pontosturistico2);

    printf("Carta 2");

    printf("Estado: %c\n", estado2);

    printf("Código da carta:%c%s\n", estado2, codigocarta2);

    printf("Nome da Cidade:%s\n", nomecidade2);

    printf("População:%d\n", populacao2);

    printf("Área:%fkm²\n", area2);

    printf("Pontos Turísticos da Cidade:%d\n", pontosturistico2);

    Densidadepopulacional2 = (float) (populacao2 / area2);
    Pibpercapita2 = (float) (pib2 * 1000000) / populacao2;

    superPoder2 = populacao2 + pontosturistico2 + (pib2 * 1000000) + area2 + Pibpercapita2 +(1/Densidadepopulacional2);

    printf ("Densidade Populacional:%f\n", Densidadepopulacional2);

    printf ("Pib per Capita:%f\n", Pibpercapita2);

    //Comparação das Cartas

    printf("\nComparação das Cartas\n");

    printf("Comparação da População: %d\n", populacao > populacao2);

    printf("Comparação da Área: %d\n", area > area2);

    printf("Comparação do Pib: %d\n", pib > pib2);

    printf("Comparação dos Pontos Turísticos: %d\n", pontosturistico > pontosturistico2);

    printf("Comparação da Densidade Populacional: %d\n", Densidadepopulacional < Densidadepopulacional2);

    printf("Comparação do Pib per Capita: %d\n", Pibpercapita > Pibpercapita2);











    return 0;










}
